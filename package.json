    "docker:dev": "nodemon --legacy-watch ./src/app.ts",
    "docker:prod": "ts-node ./src/app.ts",
    "docker:dev:dangerous": "nodemon --legacy-watch  --exec 'npm run docker:prod:dangerous'",
    "docker:prod:dangerous": "node -r ts-node/register/transpile-only ./src/app.ts"
